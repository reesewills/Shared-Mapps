<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapBuilderTextStep">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Map Name"
            android:ems="10"
            android:id="@+id/map_name_input" android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="City"
            android:ems="10"
            android:id="@+id/city_input" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/map_name_input" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="State/Region"
            android:ems="10"
            android:id="@+id/region_input" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/city_input" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Country"
            android:ems="10"
            android:id="@+id/country_input" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/region_input" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:id="@+id/private_on_switch"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/view_settings"/>
    <TextView
            android:text="Public"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/public_text"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/view_settings" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="140dp" android:layout_marginStart="140dp"/>
    <TextView
            android:text="Private"
            android:layout_width="54dp"
            android:layout_height="21dp"
            android:id="@+id/private_text"
            app:layout_constraintStart_toEndOf="@+id/private_on_switch" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/view_settings" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="View Settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_settings" android:textSize="18sp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/country_input"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Create Map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_new_map_text" android:textSize="30sp"
            android:layout_marginTop="36dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/create_button" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/private_on_switch" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>